<table class='table'>
  <thead>
    <tr>
      <th>image</th>
      <th>name</th>
      <th colspan="3"></th>
    </tr>
  </thead>
  <tbody>
    <% users.each do |user| %>
      <tr>
        <td><%= image_tag user.get_profile_image("100x100") %></td>
        <td><%= user.name %></td>
        <td>フォロー数：<%= user.followings.count %></td>
        <td>フォロワー数：<%= user.followers.count %></td>
        <% unless user == current_user %>
          <% if user.is_followed_by?(current_user) %>
            <td><%= link_to 'フォロー解除', user_relationships_path(user), method: :delete %></td>
          <% else %>
            <td><%= link_to 'フォローする', user_relationships_path(user), method: :post %></td>
          <% end %>
        <% end %>
        <td><%= link_to 'Show', user, class: "user_#{user.id}" %></td>

      </tr>
    <% end %>
  </tbody>
</table>
